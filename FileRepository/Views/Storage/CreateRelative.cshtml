@model List<FileRepository.Models.RelativePathModel>
@{
    ViewBag.Title = "CreateRelative";
}

<h2>Create new folder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group" style="height:50px;">
            @Html.Label("New Folder")
            @Html.TextBox("textbox")
        </div>

        <div class="form-group" style="height:100px;">
            @Html.Label("Select Folder")
            @Html.DropDownList("Folders",Model.Select(m => new SelectListItem(){ Text = m.RelativePath,Value=m.ServerLocation}),"----Select Folder-----")
        </div>

       
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
                <br />
                <br />
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

