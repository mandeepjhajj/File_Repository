@model List<FileRepository.Models.RelativePathModel>

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    @using (Html.BeginForm("DeleteFile", "Storage"))
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.Display("Select File to Delete")
            </dt>
            <dd>
                @Html.DropDownList("Files", Model.Select(m => new SelectListItem() { Text = m.RelativePath, Value = m.ServerLocation }))
            </dd>
        </dl>
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
            <br />
            <br />
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
