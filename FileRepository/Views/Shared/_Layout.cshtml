<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My File Repository</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    
</head>
<body class="format_body">
    @if (Request.IsAuthenticated)
    {
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("File repository", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Help", "Help", "Home")</li>
                        <li>@Html.ActionLink("My Drive", "Index", "Storage")</li>
                        <li>@RenderPage("Action.cshtml")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container-fluid body-content">
            
            @RenderBody()
            <hr />
            <footer>
                <div class="text-center container-fluid">
                    <a style=""> Site Map</a>
                    <ul class="text-left">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Help", "Help", "Home")</li>
                    </ul>
                    <ul style="list-style:none;float:right" class="text-left">
                        <li style="float:left"><a target="_blank" href="https://www.facebook.com/syracuseuniversity"><img alt="Syracuse University Facebook" src="~/Content/Images/facebook.png" style="width:30px;height:30px"></a></li>
                        <li style="float:left"><a target="_blank" href="https://twitter.com/SyracuseU"><img alt="Syracuse University Twitter" src="~/Content/Images/twitter.png" style="width:30px;height:30px"></a></li>
                        <li style="float:left"><a target="_blank" href="http://www.youtube.com/user/Syracuse"><img alt="Syracuse University Youtube" src="~/Content/Images/YouTube.png" style="width:30px;height:30px"></a></li>
                        <li style="float:left"><a target="_blank" href="http://instagram.com/syracuseu/"><img alt="Syracuse University Instagram" src="~/Content/Images/Instagram.png" style="width:30px;height:30px"></a></li>
                    </ul>
                </div>
                <p>&copy; @DateTime.Now.Year - File Repository</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    }
    else
    {
        <div class="container">
            <div class="row" style="background-color:peru">
                <div class="col-md-8">
                    <div class="myJumbo">
                        @Html.ActionLink("File repository", "Index", "Home", null, new { @class = "navbar-brand" })
                    </div>
                </div>

                <div class="col-md-4">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

        <div class="navbar container">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { style = "padding-left: 0" })</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Help", "Help", "Home")</li>
                    </ul>

                </div>
            </div>
        </div>

        <div class="container body-content">
            
                @RenderBody()
            
            <hr />
            <footer>
                <div class="text-center container-fluid">
                    Site Map
                    <ul class="text-left">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Help", "Help", "Home")</li>
                    </ul>
                    <ul style="list-style:none;float:right" class="text-left">
                        <li style="float:left"><a target="_blank" href="https://www.facebook.com/syracuseuniversity"><img alt="Syracuse University Facebook" src="~/Content/Images/facebook.png" style="width:30px;height:30px"></a></li>
                        <li style="float:left"><a target="_blank" href="https://twitter.com/SyracuseU"><img alt="Syracuse University Twitter" src="~/Content/Images/twitter.png" style="width:30px;height:30px"></a></li>
                        <li style="float:left"><a target="_blank" href="http://www.youtube.com/user/Syracuse"><img alt="Syracuse University Youtube" src="~/Content/Images/YouTube.png" style="width:30px;height:30px"></a></li>
                        <li style="float:left"><a target="_blank" href="http://instagram.com/syracuseu/"><img alt="Syracuse University Instagram" src="~/Content/Images/Instagram.png" style="width:30px;height:30px"></a></li>
                    </ul>
                </div>
                <p>&copy; @DateTime.Now.Year - File Repository</p>
            </footer>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    }
</body>
</html>
